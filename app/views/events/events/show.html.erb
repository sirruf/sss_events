<div class="panel panel-default">
  <div class="panel-heading">
    Событие <%= "'#{@event.name}'" unless @event.new_record? %>
  </div>
  <div class="panel-body">
    <table class="table table-striped">
      <tbody>
      <tr>
        <td style="width: 20%" class="text-right text-uppercase">
          <strong>Наименование</strong>
        </td>
        <td style="width: 80%" class="text-left">
          <%= @event.name %>
        </td>
      </tr>
      <tr>
        <td style="width: 20%" class="text-right text-uppercase">
          <strong>Направление</strong>
        </td>
        <td style="width: 80%" class="text-left">
          <%= @event.course_name rescue nil %>
        </td>
      </tr>
      <tr>
        <td style="width: 20%" class="text-right text-uppercase">
          <strong>Тип</strong>
        </td>
        <td style="width: 80%" class="text-left">
          <%= @event.type_name %>
        </td>
      </tr>
      <tr>
        <td style="width: 20%" class="text-right text-uppercase">
          <strong>Дата</strong>
        </td>
        <td style="width: 80%" class="text-left">
          <%= l @event.event_date, format: :short %>
        </td>
      </tr>
      <tr>
        <td style="width: 20%" class="text-right text-uppercase">
          <strong>Время</strong>
        </td>
        <td style="width: 80%" class="text-left">
          <%= @event.event_time.to_s(:time) rescue '-' %>
        </td>
      </tr>
      <tr>
        <td style="width: 20%" class="text-right text-uppercase">
          <strong>Дата изменения</strong>
        </td>
        <td style="width: 80%" class="text-left">
          <%= l @event.updated_at, format: :short %>
        </td>
      </tr>
      <tr>
        <td style="width: 20%" class="text-right text-uppercase">
          <strong>Описание</strong>
        </td>
        <td class="text-left">
          <%= simple_format @event.description %>
        </td>
      </tr>
      <% if @event.image_url %>
          <tr>
            <td style="width: 20%" class="text-right text-uppercase">
              <strong>Изображение</strong>
            </td>
            <td style="width: 80%" class="text-left">
              <%= image_tag @event.image_url, class: 'img-responsive' %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

<div itemscope itemtype="http://schema.org/Event">
  <span itemprop="name" content="<%= @event.name %>"></span>
  <span itemprop="startDate" content="<%= "#{@event.event_date.strftime('%F')}T#{@event.event_time.strftime('%H:%M')}" rescue nil %>"></span>
  <span itemprop="description" content="<%= @event.announce %>"></span>
   <span itemprop="location" itemscope itemtype="http://schema.org/Place">
        <span itemprop="name" content="КСК VSedlo.ru">
            <span itemprop="address" itemscope itemtype="http://schema.org/PostalAddress">
               <span itemprop="streetAddress" content="141420, МО, Солнечногорский р-н, дер. Жаворонки, КФХ Россия, Конный клуб"></span>
               <span itemprop="addressCountry" content="RU"></span>
               <span itemprop="addressLocality" content="дер. Жаворонки"></span>
               <span itemprop="addressRegion" content="МО Солнечногорский р-н"></span>
               <span itemprop="postalCode" content="141420"></span>
            </span>
        </span>
  </span>
</div>
